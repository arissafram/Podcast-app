<div class="signinview">
	<div>
	 	<p class="signinheader">The Podcast Place</p>
	</div>

	<div class="form"><%= form_for :user, url: session_path do |form| %>
		<p><%= form.text_field :username, placeholder: 'Username', required: true %></p>
		<p> <%= form.password_field :password, placeholder: 'password', required: true %></p>
		<p class="loginsubmit"><%= submit_tag 'Sign in!', :style => "width:100%;height:25px;color:blue" %></p>
		<p><%= link_to 'Create an account', new_user_path, class: 'createlink' %></p>
		<% end %>
	</div>
</div>
