<div class="signinview">
	<h2 class="header">The Podcast Place</h2>

	<div class="form"><%= form_for :user, url: session_path do |form| %>
		  <div class="input"> <%= form.text_field :username, placeholder: 'Username', required: true %></div>
		 <div class="input"><%= form.password_field :password, placeholder: 'password', required: true %></div>

		 <div class="input"> <%= submit_tag 'Sign in!' %></div>
		<% end %>
	</div>

	<br>
	New user? <%= link_to 'Create an account', new_user_path %>
</div>
